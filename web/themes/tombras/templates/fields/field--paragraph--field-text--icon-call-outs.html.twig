{%
  set classes = [
  'text-body'
]
%}
{% if multiple %}
    {% for item in items %}
      <div{{ item.attributes.addClass(classes) }}>{{ item.content }}</div>
    {% endfor %}
{% else %}
  {% for item in items %}
    <div{{ attributes.addClass(classes) }}>{{ item.content }}</div>
  {% endfor %}
{% endif %}
